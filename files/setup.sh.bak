#!/bin/bash

sudo apt-get -y update
wget https://packages.chef.io/stable/ubuntu/14.04/chef-server-core_12.8.0-1_amd64.deb 
sudo dpkg -i /home/ubuntu/chef-server-core_12.8.0-1_amd64.deb
sudo chmod 666 /etc/opscode/chef-server.rb
sudo cat  > /etc/opscode/chef-server.rb << EOF
server_name = "CHEF_SERVER_FQDN"
api_fqdn server_name
bookshelf['vip'] = server_name
nginx['url'] = "https://#{server_name}"
nginx['server_name'] = server_name
nginx['ssl_certificate'] = "/var/opt/opscode/nginx/ca/#{server_name}.crt"
nginx['ssl_certificate_key'] = "/var/opt/opscode/nginx/ca/#{server_name}.key"
EOF
sudo chmod 640 /etc/opscode/chef-server.rb

sudo chef-server-ctl status
